package task01;

import java.util.Scanner;

public class Method {
	int sumNum(int num) {
		Scanner sc = new Scanner(System.in);
		int a = sc.nextInt();
		int count = 0;
		for(int i=0; i<=a; i++) {
			count += i;
		}
		return count;
	}
	
	boolean checkNum(String num) {
		for(int i=0; i<num.length(); i++) {
			if(num.charAt(i) > 57 || num.charAt(i) < 49) {
				return false;
			}
		}
		return true;
	}
	
//	int getNumber(String a) {
